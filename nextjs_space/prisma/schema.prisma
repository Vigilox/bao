generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/bao/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  projects Project[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Core Application Models
model Project {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  scenes           Scene[]
  documents        Document[]
  chatMessages     ChatMessage[]
  generationTasks  GenerationTask[]
  assets           Asset[]
  artboards        Artboard[]
  artboardSnapshots ArtboardSnapshot[]

  @@index([userId])
  @@map("projects")
}

model Scene {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  order       Int      @default(0)
  projectId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  shots   Shot[]

  @@index([projectId])
  @@map("scenes")
}

model Shot {
  id          String   @id @default(cuid())
  sceneId     String
  prompt      String   @db.Text
  assetUrl    String?
  assetType   String?  // 'image' or 'video'
  modelUsed   String?
  metadata    Json?    // Store generation parameters, dimensions, etc.
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  scene           Scene            @relation(fields: [sceneId], references: [id], onDelete: Cascade)
  generationTasks GenerationTask[]

  @@index([sceneId])
  @@map("shots")
}

model Asset {
  id               String   @id @default(cuid())
  projectId        String
  filename         String
  assetType        String   // 'image', 'video', 'reference'
  cloudStoragePath String
  isPublic         Boolean  @default(false)
  url              String?  // Cached URL for display
  thumbnailUrl     String?
  prompt           String?  @db.Text
  modelUsed        String?
  metadata         Json?    // Dimensions, duration, file size, etc.
  tags             String[] @default([])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([assetType])
  @@map("assets")
}

model Document {
  id               String                       @id @default(cuid())
  projectId        String
  filename         String
  cloudStoragePath String
  isPublic         Boolean                      @default(false)
  contentType      String                       // 'script', 'brand_guidelines', 'reference', etc.
  extractedText    String?                      @db.Text
  createdAt        DateTime                     @default(now())
  updatedAt        DateTime                     @updatedAt

  project        Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  documentChunks DocumentChunk[]

  @@index([projectId])
  @@map("documents")
}

model DocumentChunk {
  id         String   @id @default(cuid())
  documentId String
  content    String   @db.Text
  embedding  Json?    // Store embedding as JSON array [float, float, ...]
  metadata   Json?    // Store chunk position, page number, etc.
  createdAt  DateTime @default(now())

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
  @@map("document_chunks")
}

model ChatMessage {
  id        String   @id @default(cuid())
  projectId String
  role      String   // 'user', 'assistant', 'system'
  content   String   @db.Text
  metadata  Json?    // Store referenced assets, generation requests, etc.
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("chat_messages")
}

model GenerationTask {
  id         String   @id @default(cuid())
  projectId  String
  shotId     String?
  taskId     String   // Kie.AI task ID
  status     String   // 'pending', 'processing', 'completed', 'failed'
  model      String   // 'nano-banana', 'veo3', etc.
  taskType   String   // 'image', 'video', 'image_edit'
  parameters Json     // Store all generation parameters
  resultUrl  String?
  errorMsg   String?  @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  shot    Shot?   @relation(fields: [shotId], references: [id], onDelete: SetNull)

  @@index([projectId])
  @@index([taskId])
  @@index([status])
  @@map("generation_tasks")
}

// Design Tool Models
model Artboard {
  id          String   @id @default(cuid())
  projectId   String
  name        String
  description String?  @db.Text
  widthPx     Int      @default(800)
  heightPx    Int      @default(600)
  data        Json     // Canvas objects state
  templateId  String?  // Reference to template if created from one
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project       Project                @relation(fields: [projectId], references: [id], onDelete: Cascade)
  template      Template?              @relation(fields: [templateId], references: [id], onDelete: SetNull)
  snapshots     ArtboardSnapshot[]
  collaborators ArtboardCollaborator[]

  @@index([projectId])
  @@index([templateId])
  @@map("artboards")
}

model ArtboardSnapshot {
  id         String   @id @default(cuid())
  artboardId String
  projectId  String
  name       String
  data       Json     // Snapshot of canvas state
  createdAt  DateTime @default(now())

  artboard Artboard @relation(fields: [artboardId], references: [id], onDelete: Cascade)
  project  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([artboardId])
  @@index([projectId])
  @@map("artboard_snapshots")
}

model Template {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  category    String   // 'social-media', 'banner', 'business-card', 'flyer', 'poster', etc.
  widthPx     Int
  heightPx    Int
  thumbnailUrl String?
  data        Json     // Default canvas objects
  tags        String[] @default([])
  isPremium   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  artboards Artboard[]

  @@index([category])
  @@map("templates")
}

model ArtboardCollaborator {
  id          String   @id @default(cuid())
  artboardId  String
  userId      String
  userName    String
  userEmail   String
  color       String   // Hex color for cursor
  cursorX     Float?
  cursorY     Float?
  lastActive  DateTime @default(now())
  createdAt   DateTime @default(now())

  artboard Artboard @relation(fields: [artboardId], references: [id], onDelete: Cascade)

  @@unique([artboardId, userId])
  @@index([artboardId])
  @@index([userId])
  @@map("artboard_collaborators")
}
